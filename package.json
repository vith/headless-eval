{
	"name": "headless-eval",
	"version": "2.0.0",
	"description": "CLI tool to evaluate a JS snippet in a webpage context with headless chrome",
	"homepage": "https://github.com/vith/headless-eval",
	"repository": {
		"type": "git",
		"url": "https://github.com/vith/headless-eval.git"
	},
	"bin": {
		"headless-eval": "dist/cli.js"
	},
	"main": "dist/lib.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"test": "ava",
		"test:local-gitlab-ci": "gitlab-runner exec shell test",
		"start": "node --loader ts-node/esm src/cli.ts",
		"prepare": "npm run build"
	},
	"author": "Jason Papakostas <vithos@gmail.com>",
	"license": "ISC",
	"dependencies": {
		"commander": "^8.3.0",
		"puppeteer": "^13.5.2",
		"read-pkg-up": "^9.1.0"
	},
	"devDependencies": {
		"@koa/router": "10.1.1",
		"@types/koa": "2.13.4",
		"@types/koa__router": "8.0.11",
		"@types/node": "^17.0.23",
		"@types/npm": "7.19.0",
		"@types/puppeteer": "5.4.5",
		"ava": "3.15.0",
		"execa": "6.1.0",
		"get-port": "6.1.2",
		"http-status-codes": "2.2.0",
		"koa": "2.13.4",
		"pkg-dir": "6.0.1",
		"ts-node": "10.7.0",
		"typescript": "4.6.3"
	},
	"ava": {
		"files": [
			"test/**/*",
			"!test/fixtures/**/*"
		],
		"extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
